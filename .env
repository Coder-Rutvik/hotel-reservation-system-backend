# ============================================
# HOTEL RESERVATION SYSTEM - ENV CONFIG
# ============================================

# --------------------------------------------
# SERVER CONFIG
# --------------------------------------------
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# --------------------------------------------
# DATABASE TYPE (used if app supports multiple DBs)
# --------------------------------------------
DB_TYPE=postgres

# --------------------------------------------
# POSTGRESQL DATABASE (LOCAL)
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=hotel_reservation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=rutvik

# REQUIRED BY ORM (Sequelize / Prisma / pg)
DATABASE_URL=postgresql://postgres:rutvik@localhost:5432/hotel_reservation

# --------------------------------------------
# MYSQL DATABASE (OPTIONAL / FUTURE USE)
# --------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=rutvik
MYSQL_DATABASE=hotel_reservation

# --------------------------------------------
# MONGODB (LOGS / OPTIONAL)
# --------------------------------------------
MONGODB_URI=mongodb://localhost:27017/hotel_reservation_logs

# --------------------------------------------
# AUTH / JWT
# --------------------------------------------
JWT_SECRET=hotel_secret_2024_rutvik_!@#$%
JWT_EXPIRE=7d

# --------------------------------------------
# CORS
# --------------------------------------------
CORS_ORIGIN=http://localhost:3000

# --------------------------------------------
# EMAIL (NOTIFICATIONS)
# --------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# --------------------------------------------
# REDIS (OPTIONAL)
# --------------------------------------------
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# FILE UPLOAD
# --------------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# --------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------
MAX_ROOMS_PER_BOOKING=5
MIN_STAY_NIGHTS=1
MAX_STAY_NIGHTS=30
CHECK_IN_TIME=14:00
CHECK_OUT_TIME=12:00
CANCELLATION_HOURS=24

# --------------------------------------------
# SECURITY / RATE LIMIT
# --------------------------------------------
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# --------------------------------------------
# LOGGING
# --------------------------------------------
LOG_LEVEL=info
LOG_FILE=logs/application.log

# --------------------------------------------
# ADMIN SEED USER
# --------------------------------------------
